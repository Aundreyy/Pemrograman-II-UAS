<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="controller.WhatIfController"
    spacing="12"
    alignment="CENTER"
    prefWidth="340"
    prefHeight="420"
    style="-fx-padding:20;"
>

    <Label text="Simulasi What If"
           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <TextField fx:id="txtKeyword"
               promptText="Kata kunci (misal: makan, kopi)"/>

    <TextField fx:id="txtNominal"
               promptText="Nominal sekali transaksi"/>

    <Button text="Simulasikan"
            onAction="#handleSimulasi"
            style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>

    <Label fx:id="lblHasil"
           wrapText="true"
           style="-fx-font-size:13px;"/>

</VBox>
