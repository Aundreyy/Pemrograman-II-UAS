<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TransaksiController"
      spacing="12"
      alignment="CENTER"
      style="-fx-padding:20;">

    <Label text="Tambah Transaksi"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <TextField fx:id="txtNominal"
               promptText="Nominal" />

    <TextField fx:id="txtCatatan"
               promptText="Catatan" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Pemasukan"
                prefWidth="120"
                onAction="#handleTambahPemasukan" />

        <Button text="Pengeluaran"
                prefWidth="120"
                onAction="#handleTambahPengeluaran" />
    </HBox>

</VBox>
